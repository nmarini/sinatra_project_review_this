
<% if logged_in? %>
<h2>Welcome, <%= current_user.username %>! Checkout our Reviews:</h2>

<% @reviews = Review.all %>
<p>
  <% @reviews.each.with_index(1) do |review, index| %>
  <div>
    <%= index %>. <b><%= review.user.username %> reviewed:</b> <%= review.name %><br>
    <% if review.star_rating == 1 %>
    <div style="color:red;">It was <%=convert_rating(review.star_rating)%><br>
    <% elsif review.star_rating == 2 %>
    <div style="color:blue;">It was <%=convert_rating(review.star_rating)%><br>
    <% else review.star_rating == 3 %>
    <div style="color:green;">It was <%=convert_rating(review.star_rating)%><br>
    <% end %>
    <a href="/reviews/<%=review.id%>">Checkout their description here</a></div>
  </div>
  <% end %>
</p>
<% else %>
<p>Welcome to Review This! Please <a href="/login">Login</a> or <a href="/signup">Signup</a> and Checkout our Reviews!</p>
<% end %>
